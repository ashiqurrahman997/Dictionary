<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/f"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Score: "
    android:textSize="40sp"
    android:id="@+id/ScoreText"
    android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ScoreText"
        android:text="0"
        android:textSize="40sp"
        android:id="@+id/Scorebord"
        android:layout_centerHorizontal="true"/>
   <TextView
       android:textAlignment="center"
   android:layout_below="@+id/Scorebord"
    android:layout_width="match_parent"
    android:text="Question"
    android:textSize="25sp"

    android:id="@+id/Question_field"
    android:layout_height="120sp"
    android:layout_margin="10sp"/>
    <TextView
        android:layout_below="@+id/Question_field"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:text="which of the following word \nhave the correct anwer ?"
        android:textSize="25sp"
        android:id="@+id/Question"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"/>

    <Button
        android:id="@+id/opt_1"
        android:layout_below="@id/Question"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="200sp"
        android:textSize="20sp"

        android:layout_height="80sp"
        android:layout_alignParentStart="true"
        android:text="Option1" />

    <Button
        android:id="@+id/opt_2"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:text="Option2"
        android:textSize="20sp"
        android:layout_below="@+id/Question"

        style="@android:style/Widget.Holo.Light.Button.Small"


        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/opt_3"
        android:textSize="20sp"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:text="Option3"
        android:layout_below="@+id/opt_1"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.Holo.Light.Button.Small"
        />

    <Button
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:text="Option4"
        android:layout_below="@+id/opt_2"
        android:layout_alignParentEnd="true"
        android:id="@+id/opt_4"
        android:textSize="20sp"

        style="@android:style/Widget.Holo.Light.Button.Small"
        />

    <Button
        android:layout_width="300sp"
        android:layout_height="70sp"
        android:textSize="20sp"

        android:id="@+id/next_question"
        android:text="Next Question"
        android:layout_below="@+id/opt_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        style="@android:style/Widget.Holo.Light.Button.Small"

        />
</RelativeLayout>
